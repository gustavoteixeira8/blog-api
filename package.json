    "build": "clear && babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "clear && NODE_ENV=production pm2 start dist/shared/infra/http/index.js --name app_server && NODE_ENV=production pm2 start dist/shared/infra/queue/index.js --name app_queue",
